{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
  }
}